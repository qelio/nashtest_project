<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/block_for_contests"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="7dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/any_exercise"
            android:layout_width="match_parent"
            android:textColor="#EB4C42"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="... вопросов" />

        <TextView
            android:id="@+id/level_xp"
            android:layout_width="match_parent"
            android:textColor="#30C936"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="+... очков XP" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_test"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="7pt"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Пожалуйста, подождите. Идёт загрузка..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="Вариант 1" />

        <Button
            android:id="@+id/button_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Вариант 2" />
    </LinearLayout>

</LinearLayout>