<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminUsersManagement">

    <TextView
        android:id="@+id/users_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/title_nashtest"
        android:layout_margin="20dp"
        android:text="К сожалению, список результатов по данному тесту пока пуст..." />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/users_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:indeterminateDrawable="@drawable/spinner_progress"
            android:indeterminateOnly="true"
            android:visibility="visible" />

        <ListView
            android:id="@+id/users_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:divider="@color/white"
            android:dividerHeight="7dp" />
    </LinearLayout>

</LinearLayout>