<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/block_for_contests"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:id="@+id/user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Идентификатор пользователя (ID): 01" />
        <TextView
            android:id="@+id/contest_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Скоро здесь будет название теста..."
            android:textColor="@color/black"
            android:textSize="8pt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contest_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Дата: 01.01.2022 22:56" />

            <TextView
                android:id="@+id/contest_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#2AAF2E"
                android:text="Результат: 0/10" />
        </LinearLayout>
    </LinearLayout>